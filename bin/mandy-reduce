#!/usr/bin/env ruby
require File.expand_path(File.join(File.dirname(__FILE__), '..', 'vendor', 'gems', 'environment.rb')
require "mandy"

if ARGV.size==0
  puts "USAGE: mandy-reduce my_script.rb 'Job Name' [payload]"
  exit
end

def absolute_path(path)
  path =~ /^\// ? path : File.join(Dir.pwd, path)
end

if ARGV.size > 2
  payload = ARGV[2]
  Mandy::Packer.unpack(payload)
end

file   = absolute_path(ARGV[0])
job_name = ARGV[1]

require file

Mandy::Job.find_by_name(job_name).run_reduce
